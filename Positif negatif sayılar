package exp3;

/**
 *
 * @author Muhammad Sadık
 */
/*
1. Başla
2. Kullanıcıdan sayı iste
3. Sayı sıfır ise ekrana yazdır 
4. Değilse sayı pozitif mi kontrol et öyleyse ekrana yazdır
5. Son olarak sayı negatif mi kontrol et öyleyse ekrana yazdır
6. Bitir
 */
import java.util.Scanner;
public class PositifNegatifSifir {

    /**
     * @param args
     */
    public static void main(String[] args) {
            Scanner input = new Scanner(System.in);
            System.out.print("Sayi gir->");
            
            int sayi = input.nextInt();
            if(sayi==0){
                System.out.println("Sayi sifir.");
            }
            else if(sayi>0){
                System.out.println("Sayi pozitif.");
            }
            else{
                System.out.println("Sayi negatif.");
            }
        }
    }
    

